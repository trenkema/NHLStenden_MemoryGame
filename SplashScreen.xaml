<Window x:Class="MemoryProject.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="300" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="/Images/MainMenuBackground.jpg"/>
    </Window.Background>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Source="Images/Logo5.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="400"/>
    </Grid>
</Window>
